<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/px10"
    tools:context=".signin.SignInActivity">

    <TextView
        android:id="@+id/sign_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="@string/base_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sign_info_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sign_info_content"
        android:layout_width="@dimen/px0"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:text="@string/base_title"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/sign_info_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>